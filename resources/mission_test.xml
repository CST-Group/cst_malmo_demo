        <Block reward="-100.0" type="lava" behaviour="oncePerTimeSpan" cooldownInMs="50"/>
        <Block reward="100.0" type="lapis_block" behaviour="oncePerTimeSpan" cooldownInMs="50"/>
      </RewardForTouchingBlockType>
